@using Template.Client.Areas.Identity.Pages.Account
@using Template.Client.Layouts.Basic
@using Template.Client.Pages

<CascadingValue Value="this">
    <CascadingAuthenticationState>
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                <PageTitle>@Config["App:Name"]</PageTitle>

                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Layout)">
                    <NotAuthorized>
                        <LogIn />
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>

            <NotFound>
                <LayoutView Layout="@typeof(Layout)">
                    <Error404 />
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingAuthenticationState>
</CascadingValue>
