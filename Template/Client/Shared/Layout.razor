@inherits LayoutComponentBase

<div id="wrapper">
    <div id="header">
        <div class="container">
            <p id="logo">@Config["App:Name"]</p>
            <NavMenu />
        </div>
    </div>

    <main class="container">
        @Body
    </main>
</div>

<div id="footer" class="container">
    <p>&copy; @Config["App:Name"]</p>
    <CultureForm />
</div>

<div id="alerts">
    <AuthorizeView>
        <Authorized>
            @{
                var user = UserService.GetCurrentUser();

                if (!user.EmailConfirmed)
                {
                    <div class="alert">
                        <p>@((MarkupString)Localizer["AConfirmationLinkHasBeenSentToEmail"].Replace("{email}", user.Email))</p>
                        <button class="a margin-1" @onclick="ResendEmailConfirmationUrl">@Localizer["ResendLink"]</button>
                    </div>
                }
            }
        </Authorized>
    </AuthorizeView>
</div>
